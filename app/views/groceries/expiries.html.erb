<h2>Expiring within 3 Days!</h2>

<div class="card">
  <div class="box">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Item</th>
          <th>Days Left</th>
        </tr>
      </thead>
      <tbody>
        <% @exps.each do |exp,i| %>
          <tr data-toggle="collapse" data-target="#entry-<%=i%>" aria-expanded="false" aria-controls="collapseExample">
            <div>
              <td><%= exp.ingredient %></td> 
              <td><%= exp.expiry_countdown %></td>
              <td><%= link_to "Remove", user_grocery_path(exp.user, exp), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>