<div class="card-deck">
<div class="card">
  <div class="box">
  <h2>New item</h2>    
    <%= form_with scope: :grocery, url: user_groceries_path, local: true, :html => {class:'form-group'} do |form| %>
      <p>
        <label for="ingrdient">Item:</label>
        <%= form.text_field :ingredient, id:'ingredient', class: "form-control", value: @voice_preset_new[:item] %><br/>
      </p>
      <p>
        <label for="expired_date">Date of expiry:</label>
        <%= form.date_field :expired_date, id:'exp-date', class: "form-control", value: @voice_preset_new[:expiry_date] %><br/>
      </p>
      <p>
        <%= form.submit 'Submit', :class => 'btn btn-primary' %>   
      </p>
    <% end %>

  </div>
</div>

    <div class = "card">
      <div class="ocr">
        <%= render 'ocr'%>
      </div>
    </div>
    
    <div class ="card">
      <div class="voice">
      <%= render 'voice'%>
      </div>
    </div>
</div>
<%= link_to "Show", user_groceries_path(current_user)  %>


<style>
.card {   
    top: 3vh;
    margin: 0 auto;
    width:350px;
    min-height:50px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}

.voice {
    text-align: center;  
}
p {
  margin: 0px;
}
h2 {
  font-family: "Comic Sans MS", cursive, sans-serif;
}
.box {
    margin: 20px;
}
</style>