
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<div class="card-deck">
  <div class="card">
    <%= button_to "Create new item?", new_user_grocery_path, method: :get, class:"btn btn-primary col-12 text-center" %>
  </div>

  <div class="card">
    <div class="box">
      <h3>My Groceries</h3>
      <p>Today: <%=Time.now.strftime("%A, ")%><%=Date.today.to_formatted_s(:rfc822)%></p>
        <table class="table table-hover">
      <thead>
        <tr>
          <th>Item</th>
          <th nowrap>Expiring Date</th>
          <th>Actions</th>
          </tr>
      </thead>
      <tbody>

        <% current_user.groceries.each_with_index do |grocery,i| %>
          <tr>
        <% @groceries.each_with_index do |grocery,i| %>
          <tr data-toggle="collapse" data-target="#entry-<%=i%>" aria-expanded="false" aria-controls="collapseExample">

            <div>
              <% if grocery.expired?%>
                <td style="color:red"><%=grocery.ingredient%></td>
                <td style="text-align:center; color:red"><%=grocery.expired_date%></td>
              <% else %>
                <td><%=grocery.ingredient%></td>
                <td style="text-align:center"><%=grocery.expired_date%></td>
              <% end %>
              <td style="text-align:center"><%= link_to '<i class="icon-ok icon-white"></i>	&#9998;'.html_safe, edit_user_grocery_path(grocery.user, grocery) %>
              &nbsp&nbsp&nbsp<%= link_to '<i class="icon-ok icon-white"></i>	&#10008;'.html_safe, user_grocery_path(grocery.user, grocery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
    <div class="card">
      <%= button_to "No idea what to cook? Show recipe", user_recipes_path(current_user), method: :get, class:"btn btn-outline-primary col-12 text-center" %>
    </div>
</div>

<style>
.card {   
    top: 3vh;
    margin: 0 auto;
    width:350px;
    min-height:5px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}
.box {
    margin: 20px;
}
h3 {
    font-family: "Comic Sans MS", cursive, sans-serif;

}
</style>

