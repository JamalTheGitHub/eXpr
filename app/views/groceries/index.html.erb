<h2> Create new grocery item? </h2>
  <%= button_to "Create Grocery", new_user_grocery_path, method: :get %>
<h2> List of Groceries </h2>

<div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Ingredient</th>
        <th>Expiring Date</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.groceries.each do |grocery| %>
        <tr>
          <td><%=grocery.ingredient%></td>
          <td><%=grocery.expired_date%></td>
          <td><%= link_to "Edit", edit_user_grocery_path(grocery.user, grocery) %></td>
          <td><%= link_to "Delete", user_grocery_path(grocery.user, grocery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>