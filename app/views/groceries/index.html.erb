
<div class="card-deck">
  
  <div class="card">
    <%= button_to "Create new item?", new_user_grocery_path, method: :get, class:"btn btn-primary col-12 text-center" %>
  </div>

  <div class="card">
    <div class="box">
        <table class="table table-hover">
      <thead>
        <tr>
          <th>Item</th>
          <th>Expiring Date</th>
        </tr>
      </thead>
      <tbody>
        <% @groceries.each_with_index do |grocery,i| %>
          <tr data-toggle="collapse" data-target="#entry-<%=i%>" aria-expanded="false" aria-controls="collapseExample">
            <div>
              <td><%=grocery.ingredient%></td>
              <td><%=grocery.expired_date%></td>
            </div>
          </tr>
          <tr class="collapse" id="entry-<%=i%>">
            <div>
              <td><%= link_to "Edit", edit_user_grocery_path(grocery.user, grocery) %></td>
              <td><%= link_to "Delete", user_grocery_path(grocery.user, grocery), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
    <div class="card">
      <%= button_to "No idea what to cook? Show recipe", user_recipes_path(current_user), method: :get, class:"btn btn-outline-primary col-12 text-center" %>
    </div>
</div>

<style>
.card {   
    top: 3vh;
    margin: 0 auto;
    width:350px;
    min-height:5px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}
.box {
    margin: 20px;
}
</style>

