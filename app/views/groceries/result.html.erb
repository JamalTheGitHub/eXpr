<div class="card">
  <div class="box">
    <h3>Choose your food!</h3>
      <div class="card-deck">
        <% @recipes.each do |recipe| %>
          <div class="card">
            <div class="card-body">
              <%= recipe.title%>
              <img src="<%= recipe.image_url %>" width="100" height="100">
              <p><a href="<%= recipe.source_url%>">Check Recipe Out!</a></p>
            </div>  
          </div>
        <% end %>
      </div>
  </div>
</div>

<style>
h3 {
  text-align: center;
  font-family: "Comic Sans MS", cursive, sans-serif;

}
.card {   
    top: 4vh;
    margin: 0 auto;
    margin-bottom: 30px;
    max-width:350px;
    min-height:5px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}
.card-body {
  min-width: 300px;
}
.box {
    margin: 20px;
}
img {
    float:right;
}
</style>