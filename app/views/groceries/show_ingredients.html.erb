<div class="card">
  <div class="box">
    <%= form_with scope: :grocery, url: user_recipes_path(current_user), method: :post, local: true do |form| %>
      <h5>Make a recipe with:</h5>
      <% @valid_items.each do |valid_item| %>
        <tr>
          <td><% check_box_tag "ingredients[]", valid_item.ingredient %></td>
          <td><%= check_box('recipe', 'ingredients', {:multiple => true}, valid_item.ingredient, nil) %></td>
          <td><%=valid_item.ingredient %></td>
          <br/>
        </tr>
      <% end %>
      <br/><%=form.submit "Search Recipes", :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<style>

.card {
    top:13vh;
    margin: 0 auto;
    width:300px;
    min-height:250px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}
.card:hover {
    box-shadow:0 30px 70px rgba(0,0,0,.2);
}
.card .box {
    position:absolute;
    top:50%;
    left:0;
    transform:translateY(-50%);
    text-align:center;
    padding:20px;
    box-sizing:border-box;
    width:100%;
}
</style>