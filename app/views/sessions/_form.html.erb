<%= form_for :session, url: session_path, :html => {class:'form-group'} do |form| %>
    <div class="form-group">
    <label for="email">Email address:</label>
    <%= form.text_field :email, class: "form-control", id: "email" %>
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <%= form.password_field :password, class: "form-control", id: "pwd" %>
  </div>

  <div>
  <button type="submit" class="btn btn-primary mb-2">Sign in</button>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
    <p>Don't have an account?    <%= link_to t(".sign_up"), sign_up_path %></p>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path %>
  </div>
<% end %>
