<html>
<body>
<div class="card-deck">

  <% if signed_in? %>
  <div class="card">
  <%= button_to "Add new item?", new_user_grocery_path(current_user), method: :get,class:"btn btn-outline-primary btn-lg col-12 text-center" %>
  </div>
  <% end %>

<div class="card">
  <div class="box">
  <p>Total Items:<%= " #{@groceries.count}" %></p>
  <p>Expiring Items:<%= " #{@exps.count}" %></p>
  <p>Expired Items: <%= " #{@expired.count}" %></p>
  <br/>
  <h4>Welcome, <%=@user%>. What would you like to do?</h4>
  </div>
</div>
  <div class="card">
    <div class="box">
    <div class="button"><%= button_to "All Items", user_groceries_path(current_user), type:"button", class:"btn btn-primary btn-block", method: :get %></div>
    <div class="button"><%= button_to "Expiring", user_expiries_path(current_user), type:"button", class:"btn btn-warning btn-block", method: :get %></div>
    <div id="button1"><%= button_to "Expired", user_expired_path(current_user), type:"button", class:"btn btn-danger btn-block", method: :get %></div>
    </div>
  </div>
</div>
</body>
</html>


<style>

p {
  text-align: center;
  font-size: 20px;
}
h4 {
  font-family: "Comic Sans MS", sans-serif;
  text-align: center;
}
.button {
  margin-bottom:10px;
}
#button1 {
  margin:0;
}
.card {   
    top: 3vh;
    margin: 0 auto;
    width:350px;
    min-height:5px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}

.box {
    margin: 20px;
}
h5 {
  margin: 2px;
  color: white;
}
#black {
  color:black;
}
</style>