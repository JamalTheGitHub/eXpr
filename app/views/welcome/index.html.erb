<html>
<body>
<div class="card-deck">

  <% if signed_in? %>
  <div class="card">
  <%= button_to "Add new item?", new_user_grocery_path(current_user), method: :get,class:"btn btn-outline-primary btn-lg col-12 text-center" %>
  </div>
  <% end %>

<div class="card">
  <div class="box">
  <h1 style="font-size:8vw">Today</h1>
  <p>All item total:<%= " #{@groceries.count}" %></p>
  <p>Expiring total:<%= " #{@exps.count}" %></p>
  <p>Expired total: <%= " #{@expired.count}" %></p>
  </div>
</div>
  <div class="card">
    <div class="box">
    <%= button_to "All Items", user_groceries_path(current_user), type:"button", class:"btn btn-primary btn-block", method: :get %>
    <%= button_to "Expiring", user_expiries_path(current_user), type:"button", class:"btn btn-warning btn-block", method: :get %>
    <%= button_to "Expired", user_expired_path(current_user), type:"button", class:"btn btn-danger btn-block", method: :get %>
    </div>
  </div>
</div>
</body>
</html>


<style>
h1 {
  font-family: "Comic Sans MS", cursive, sans-serif;
  text-align: center;
}

.card {   
    top: 8vh;
    margin: 0 auto;
    width:350px;
    min-height:5px;
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
}

.box {
    margin: 20px;
}
h5 {
  margin: 2px;
  color: white;
}
#black {
  color:black;
}
</style>