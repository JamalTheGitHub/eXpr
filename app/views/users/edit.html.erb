<div class="card">
  <div class="box">
    <h2>Update User</h2>
    <%= form_for @user, :html => {class:'form-group'} do |form| %>
    <%= render partial: '/users/form', object: form %>
    <%= form.submit 'Save changes', :class => 'btn btn-primary' %>   
    <% end %>
  </div>
</div>


<style>
h2 {
  font-family: "Comic Sans MS", cursive, sans-serif;
}

.card {
    top: 4vh; 
    margin: 0 auto;
    margin-bottom:30px;
    width:350px;
    min-height:300px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}

.box {
    margin: 20px;
}
</style>